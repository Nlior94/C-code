#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main()
{
	int line = 0;
	scanf("%d", &line);//这里输入的line值为上半部分菱形的行数（带中间那一行）

	int i = 0;//打印菱形上半部分
	for (i = 0; i < line; i++)
	{
		int j = 0;
		for (j = 0; j < line - 1 - i; j++)
		{
			printf(" ");
		}
		for (j = 0; j < 2 * i + 1; j++)
		{
			printf("*");
		}
		printf("\n");
	}

	for (i = 0; i < line - 1; i++)//打印菱形下半部分
	{
		int j = 0;
		for (j = 0; j <= i; j++)
		{
			printf(" ");
		}
		for (j = 0; j < 2 * (line - 1 - i) - 1; j++)
		{
			printf("*");
		}
		printf("\n");
	}
	return 0;
}
